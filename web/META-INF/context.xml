<?xml version="1.0" encoding="UTF-8"?>
<Context path="/carrito_par">
  <WatchedResource>
        WEB-INF/web.xml
    </WatchedResource>
    <Resource 
        name="jdbc/postgres" 
        auth="Container"
        type="javax.sql.DataSource" 
        driverClassName="org.postgresql.Driver"
        url="jdbc:postgresql://127.0.0.1:5432/carrito"
        username="postgres" 
        password="pass" 
        maxActive="20" 
        maxIdle="10" 
        maxWait="-1"
    />
</Context>
